<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<!--
  core-site.xml — Configuration centrale Hadoop
  Définit l'adresse du système de fichiers HDFS
-->
<configuration>

  <!-- URI du NameNode HDFS -->
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://bigdata-node:9000</value>
    <description>Adresse du NameNode HDFS</description>
  </property>

  <!-- Répertoire temporaire Hadoop -->
  <property>
    <name>hadoop.tmp.dir</name>
    <value>/opt/hadoop/tmp</value>
  </property>

  <!-- Autorisations Hive sur HDFS -->
  <property>
    <name>hadoop.proxyuser.root.hosts</name>
    <value>*</value>
  </property>
  <property>
    <name>hadoop.proxyuser.root.groups</name>
    <value>*</value>
  </property>

</configuration>
