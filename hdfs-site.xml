<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<!--
  hdfs-site.xml — Configuration HDFS
  Cluster mono-nœud → replication = 1
-->
<configuration>

  <!-- Facteur de réplication : 1 car un seul DataNode -->
  <property>
    <n>dfs.replication</n>
    <value>1</value>
  </property>

  <!-- Répertoire de métadonnées du NameNode -->
  <property>
    <n>dfs.namenode.name.dir</n>
    <value>file:///opt/hadoop/dfs/name</value>
  </property>

  <!-- Répertoire de stockage des blocs du DataNode -->
  <property>
    <n>dfs.datanode.data.dir</n>
    <value>file:///opt/hadoop/dfs/data</value>
  </property>

  <!-- Mode sans Kerberos (cours uniquement) -->
  <property>
    <n>dfs.permissions.enabled</n>
    <value>false</value>
  </property>

  <!-- Accès Web HDFS (pour REST API) -->
  <property>
    <n>dfs.webhdfs.enabled</n>
    <value>true</value>
  </property>

  <!-- Port UI NameNode -->
  <property>
    <n>dfs.namenode.http-address</n>
    <value>bigdata-node:9870</value>
  </property>

</configuration>
